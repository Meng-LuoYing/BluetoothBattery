<Window x:Class="BluetoothBatteryUI.IconPickerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="选择设备图标" Height="380" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#252526"
        WindowStyle="None"
        AllowsTransparency="True">

    <Window.Resources>
        <Style x:Key="IconOption" TargetType="RadioButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="Border" 
                                Background="#333333" 
                                CornerRadius="8" 
                                Padding="15" 
                                Margin="5"
                                Cursor="Hand">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="{TemplateBinding Tag}" 
                                           FontFamily="Segoe MDL2 Assets" 
                                           FontSize="24" 
                                           Foreground="White"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,5"/>
                                <ContentPresenter HorizontalAlignment="Center" TextElement.Foreground="#CCCCCC"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#0078D4"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#66B2FF"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#444444"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DialogButton" TargetType="Button">
            <Setter Property="Background" Value="#3E3E42"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,6"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#505055"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border BorderThickness="1" BorderBrush="#3F3F46" CornerRadius="8" Background="#252526">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="选择设备图标" 
                       Foreground="White" 
                       FontSize="16" 
                       FontWeight="SemiBold"
                       Margin="0,0,0,15"/>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <WrapPanel HorizontalAlignment="Center">
                    <RadioButton Content="默认" Tag="&#xE9D9;" GroupName="Icons" Click="Icon_Selected" x:Name="DefaultIconRadio" Style="{StaticResource IconOption}"/>
                    <RadioButton Content="鼠标" Tag="&#xE962;" GroupName="Icons" Click="Icon_Selected" Style="{StaticResource IconOption}"/>
                    <RadioButton Content="键盘" Tag="&#xE967;" GroupName="Icons" Click="Icon_Selected" Style="{StaticResource IconOption}"/>
                    <RadioButton Content="耳机" Tag="&#xE95B;" GroupName="Icons" Click="Icon_Selected" Style="{StaticResource IconOption}"/>
                    <RadioButton Content="手柄" Tag="&#xE7FC;" GroupName="Icons" Click="Icon_Selected" Style="{StaticResource IconOption}"/>
                    <RadioButton Content="手机" Tag="&#xE8EA;" GroupName="Icons" Click="Icon_Selected" Style="{StaticResource IconOption}"/>
                    <RadioButton Content="笔" Tag="&#xEDC6;" GroupName="Icons" Click="Icon_Selected" Style="{StaticResource IconOption}"/>
                    <RadioButton Content="音箱" Tag="&#xE7F5;" GroupName="Icons" Click="Icon_Selected" Style="{StaticResource IconOption}"/>
                </WrapPanel>
            </ScrollViewer>

            <Button Grid.Row="2" 
                    Content="上传自定义图片..." 
                    Click="Upload_Click" 
                    Style="{StaticResource DialogButton}"
                    Background="Transparent"
                    BorderThickness="1"
                    BorderBrush="#3F3F46"
                    Margin="0,15,0,5"/>

            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="取消" Click="Cancel_Click" Style="{StaticResource DialogButton}"/>
                <Button Content="确定" Click="Ok_Click" Background="#0078D4" Style="{StaticResource DialogButton}"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
