<Window x:Class="BluetoothBatteryUI.DeviceDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="设备详情" Height="650" Width="1000"
        Background="#1E1E1E"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    
    <Window.Resources>
        <!-- 按钮样式 -->
        <Style x:Key="NavButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#AAAAAA"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2D2D30"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ActiveNavButton" TargetType="Button" BasedOn="{StaticResource NavButton}">
            <Setter Property="Foreground" Value="#00BCD4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 左侧导航 -->
        <Border Grid.Column="0" 
                Background="#252526" 
                CornerRadius="8"
                Margin="0,0,10,0"
                Padding="10">
            <StackPanel>
                <!-- 返回按钮 -->
                <Button Content="← 返回" 
                        Style="{StaticResource NavButton}"
                        Click="Back_Click"
                        Margin="0,0,0,20"/>

                <!-- 时间范围选择 -->
                <TextBlock Text="时间范围" 
                           Foreground="White" 
                           FontWeight="Bold"
                           Margin="15,0,0,10"/>
                
                <Button x:Name="Range1HourButton"
                        Content="最近 1 小时"
                        Style="{StaticResource NavButton}"
                        Click="TimeRange_Click"
                        Tag="1"/>
                
                <Button x:Name="Range6HourButton"
                        Content="最近 6 小时"
                        Style="{StaticResource NavButton}"
                        Click="TimeRange_Click"
                        Tag="6"/>
                
                <Button x:Name="Range24HourButton"
                        Content="最近 24 小时"
                        Style="{StaticResource ActiveNavButton}"
                        Click="TimeRange_Click"
                        Tag="24"/>
            </StackPanel>
        </Border>

        <!-- 右侧内容 -->
        <Border Grid.Column="1" 
                Background="#252526" 
                CornerRadius="8"
                Padding="30">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 设备信息头部 -->
                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock x:Name="DeviceNameText"
                                   Text="R65 5.0"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="White"/>
                        <TextBlock x:Name="DeviceStatusText"
                                   Text="LINKED"
                                   FontSize="14"
                                   Foreground="#00BCD4"
                                   Margin="0,5,0,0"/>
                    </StackPanel>

                    <!-- 电量圆环 -->
                    <Grid Grid.Column="1" Width="100" Height="100">
                        <Ellipse Stroke="#333333" StrokeThickness="8"/>
                        <Path x:Name="BatteryArc"
                              Stroke="#00BCD4"
                              StrokeThickness="8"
                              StrokeStartLineCap="Round"
                              StrokeEndLineCap="Round"/>
                        <TextBlock x:Name="BatteryPercentText"
                                   Text="69%"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="#00BCD4"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Grid>

                <!-- 使用时长 -->
                <Border Grid.Row="1" 
                        Background="#1E1E1E"
                        CornerRadius="8"
                        Padding="20"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="使用时长统计（24h窗口）"
                                   FontSize="14"
                                   Foreground="#AAAAAA"
                                   Margin="0,0,0,10"/>
                        <TextBlock x:Name="UsageTimeText"
                                   Text="0h 0m"
                                   FontSize="32"
                                   FontWeight="Bold"
                                   Foreground="White"/>
                    </StackPanel>
                </Border>

                <!-- 电量历史趋势 -->
                <Border Grid.Row="2" 
                        Background="#1E1E1E"
                        CornerRadius="8"
                        Padding="20"
                        Margin="0,0,0,20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="电量历史趋势"
                                   FontSize="14"
                                   Foreground="White"
                                   FontWeight="Bold"
                                   Margin="0,0,0,15"/>

                        <Canvas x:Name="ChartCanvas" 
                                Grid.Row="1"
                                Background="Transparent"
                                ClipToBounds="True">
                            <!-- 网格线和图表将在代码中绘制 -->
                        </Canvas>

                        <!-- 暂无数据提示 -->
                        <TextBlock x:Name="NoDataText"
                                   Grid.Row="1"
                                   Text="暂无数据"
                                   FontSize="16"
                                   Foreground="#666666"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Visibility="Collapsed"/>
                    </Grid>
                </Border>

                <!-- 底部信息栏 -->
                <Grid Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="平均续航:"
                                   FontSize="12"
                                   Foreground="#AAAAAA"/>
                        <TextBlock x:Name="AverageDrainText"
                                   Text="--"
                                   FontSize="14"
                                   Foreground="White"
                                   Margin="0,5,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="连接方式:"
                                   FontSize="12"
                                   Foreground="#AAAAAA"/>
                        <TextBlock x:Name="ConnectionTypeText"
                                   Text="蓝牙"
                                   FontSize="14"
                                   Foreground="White"
                                   Margin="0,5,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="上次变化:"
                                   FontSize="12"
                                   Foreground="#AAAAAA"/>
                        <TextBlock x:Name="LastChangeText"
                                   Text="-"
                                   FontSize="14"
                                   Foreground="White"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
