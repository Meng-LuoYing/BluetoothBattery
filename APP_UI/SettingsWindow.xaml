<Window x:Class="BluetoothBatteryUI.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="设置" 
        Height="600" 
        Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#1E1E1E">
    
    <Window.Resources>
        <!-- 开关样式 -->
        <Style x:Key="ToggleSwitch" TargetType="CheckBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Border x:Name="SwitchBackground"
                                    Width="50"
                                    Height="26"
                                    CornerRadius="13"
                                    Background="#555555">
                                <Ellipse x:Name="SwitchThumb"
                                         Width="20"
                                         Height="20"
                                         Fill="White"
                                         HorizontalAlignment="Left"
                                         Margin="3,0,0,0">
                                    <Ellipse.RenderTransform>
                                        <TranslateTransform x:Name="ThumbTransform" X="0"/>
                                    </Ellipse.RenderTransform>
                                </Ellipse>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="SwitchBackground"
                                                          Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                          To="#4CAF50"
                                                          Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="ThumbTransform"
                                                           Storyboard.TargetProperty="X"
                                                           To="24"
                                                           Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="SwitchBackground"
                                                          Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                          To="#555555"
                                                          Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="ThumbTransform"
                                                           Storyboard.TargetProperty="X"
                                                           To="0"
                                                           Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 按钮样式 -->
        <Style x:Key="SettingsButton" TargetType="Button">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3E3E42"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource SettingsButton}">
            <Setter Property="Background" Value="#007ACC"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1C97EA"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 设置内容 -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden">
            <StackPanel>
                <!-- 常规设置 -->
                <TextBlock Text="常规设置" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           Margin="0,0,0,15"/>
                
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="低电量提醒阈值 (%)" 
                               Foreground="#AAAAAA" 
                               FontSize="13"
                               Margin="0,0,0,8"/>
                    <TextBox x:Name="ThresholdTextBox"
                             Text="30"
                             FontSize="14"
                             Padding="10"
                             Background="#2D2D30"
                             Foreground="White"
                             BorderBrush="#555555"
                             BorderThickness="1"/>
                </StackPanel>

                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="刷新间隔 (分钟)" 
                               Foreground="#AAAAAA" 
                               FontSize="13"
                               Margin="0,0,0,8"/>
                    <TextBox x:Name="RefreshIntervalTextBox"
                             Text="5"
                             FontSize="14"
                             Padding="10"
                             Background="#2D2D30"
                             Foreground="White"
                             BorderBrush="#555555"
                             BorderThickness="1"/>
                </StackPanel>

                <!-- 开关设置 -->
                <TextBlock Text="功能开关" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           Margin="0,10,0,15"/>
                
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="开启自动刷新" 
                               Foreground="#AAAAAA" 
                               FontSize="14"
                               VerticalAlignment="Center"/>
                    <CheckBox x:Name="EnableAutoRefreshCheckBox"
                              Grid.Column="1"
                              Style="{StaticResource ToggleSwitch}"
                              IsChecked="True"/>
                </Grid>

                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="开启低电量提醒" 
                               Foreground="#AAAAAA" 
                               FontSize="14"
                               VerticalAlignment="Center"/>
                    <CheckBox x:Name="EnableAlertCheckBox"
                              Grid.Column="1"
                              Style="{StaticResource ToggleSwitch}"
                              IsChecked="True"/>
                </Grid>

                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="使用 Toast 通知（在右下角）" 
                               Foreground="#AAAAAA" 
                               FontSize="14"
                               VerticalAlignment="Center"/>
                    <CheckBox x:Name="UseToastCheckBox"
                              Grid.Column="1"
                              Style="{StaticResource ToggleSwitch}"
                              IsChecked="True"/>
                </Grid>

                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="开机自启动" 
                               Foreground="#AAAAAA" 
                               FontSize="14"
                               VerticalAlignment="Center"/>
                    <CheckBox x:Name="StartupCheckBox"
                              Grid.Column="1"
                              Style="{StaticResource ToggleSwitch}"/>
                </Grid>



                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="关闭时最小化到托盘" 
                               Foreground="#AAAAAA" 
                               FontSize="14"
                               VerticalAlignment="Center"/>
                    <CheckBox x:Name="MinimizeToTrayCheckBox"
                              Grid.Column="1"
                              Style="{StaticResource ToggleSwitch}"/>
                </Grid>

                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="详细日志" 
                               Foreground="#AAAAAA" 
                               FontSize="14"
                               VerticalAlignment="Center"/>
                    <CheckBox x:Name="DetailedLoggingCheckBox"
                              Grid.Column="1"
                              Style="{StaticResource ToggleSwitch}"/>
                </Grid>
            </StackPanel>
        </ScrollViewer>

        <!-- 底部按钮 -->
        <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,20,0,0">
            <Button Content="打开日志文件夹"
                    Style="{StaticResource SettingsButton}"
                    HorizontalAlignment="Stretch"
                    Margin="0,0,0,10"
                    Click="OpenLogFolder_Click"/>
            <Button Content="保存设置"
                    Style="{StaticResource PrimaryButton}"
                    HorizontalAlignment="Stretch"
                    Margin="0,0,0,10"
                    Click="SaveSettings_Click"/>
            <Button Content="取消"
                    Style="{StaticResource SettingsButton}"
                    HorizontalAlignment="Stretch"
                    Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
